{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"jsx": "react",
		"strict": true,
		"noImplicitReturns": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "types.d.ts"],
	"exclude": ["node_modules"]
}
